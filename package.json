{
  "name": "hedelmia-pos",
  "version": "0.1.0",
  "description": "Aplicación POS de escritorio para paletería Hedelmiá",
  "main": "dist/main/index.js",
  "author": "Hedelmiá Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "cd src/renderer && vite",
    "dev:main": "cross-env NODE_ENV=development ts-node-dev --project tsconfig.json src/main/index.ts",
    "build": "npm run build:prisma && npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && vite build",
    "build:main": "tsc --project tsconfig.json",
    "build:prisma": "prisma generate",
    "seed": "prisma db push && ts-node prisma/seed.ts",
    "lint": "eslint --ext .ts,.tsx src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@prisma/client": "5.16.2",
    "@radix-ui/react-icons": "1.3.0",
    "class-variance-authority": "0.7.0",
    "concurrently": "8.2.2",
    "electron": "29.4.0",
    "electron-is-dev": "3.3.0",
    "lucide-react": "0.392.0",
    "pdf-lib": "1.17.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.22.3",
    "recharts": "2.8.0",
    "sqlite3": "5.1.7",
    "tailwind-merge": "2.2.1",
    "tailwindcss-animate": "1.0.7",
    "zustand": "4.5.0",
    "zod": "4.22.3"
  },
  "devDependencies": {
    "@types/node": "20.11.19",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.17",
    "cross-env": "7.0.3",
    "electron-builder": "24.13.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.33.2",
    "postcss": "8.4.33",
    "prisma": "5.16.2",
    "tailwindcss": "3.4.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3",
    "vite": "5.0.12"
  },
  "build": {
    "appId": "com.hedelmia.pos",
    "productName": "Hedelmiá POS",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
