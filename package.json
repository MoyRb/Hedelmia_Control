{
  "name": "hedelmia-pos",
  "version": "0.1.0",
  "description": "Hedelmía POS",
  "author": "Hedelmia",
  "main": "dist/main/index.js",
  "type": "module",

  "scripts": {
    "build:prisma": "prisma generate",
    "build:renderer": "cd src/renderer && vite build",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:prisma && npm run build:renderer && npm run build:preload && npm run build:main",
    "dist": "npm run build && electron-builder"
  },

  "dependencies": {
    "@prisma/client": "5.16.2",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.2",
    "recharts": "^3.6.0"
  },

  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "electron": "29.4.0",
    "electron-builder": "24.13.3",
    "postcss": "^8.5.6",
    "prisma": "5.16.2",
    "tailwindcss": "^4.1.18",
    "vite": "^5.0.12"
  },

  "build": {
    "appId": "com.hedelmia.pos",
    "productName": "Hedelmía POS",
    "asar": true,

    "asarUnpack": [
      "**/node_modules/.prisma/**",
      "**/node_modules/@prisma/**",
      "dist/preload/**"
    ],

    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "prisma/schema.prisma"
    ],

    "extraResources": [
      {
        "from": "prisma/hedelmia.db",
        "to": "prisma/hedelmia.db"
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
